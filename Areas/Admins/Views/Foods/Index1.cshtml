@model IEnumerable<OnlineRestaurant.Web.Models.Food>

@{
    ViewData["Title"] = "Index1";
}

<h1 style="text-align:center;color:darkorchid;">Food Items</h1>


<table class="table"  style="background-color:antiquewhite;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FoodName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsEnabled)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FoodCategory)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FoodName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsEnabled)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FoodCategory.FoodCategoryName)
            </td>
            <td>
               
                <a asp-action="Details" asp-route-id="@item.FoodId">Details</a> 
            </td>
        </tr>
}
    </tbody>
</table>
<br />

<button style="color:darkblue;width:200px;height:60px;border-radius:10px;background-color:darkkhaki;"><a href="https://localhost:44348/Foods/Orders/Create">Order Now </a></button>

