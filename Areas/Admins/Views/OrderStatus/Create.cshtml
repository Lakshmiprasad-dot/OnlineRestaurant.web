@model OnlineRestaurant.Web.Models.OrderStatus

@{
    ViewData["Title"] = "Create";
}
<center>
<h1 style="color:blueviolet;">Create</h1>
</center>
<h4>Order Status</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FoodOrderId" class="control-label"></label>
                <input asp-for="FoodOrderId" class="form-control" />
                <span asp-validation-for="FoodOrderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderId" class="control-label">Select Customer Email</label>
                <select asp-for="OrderId" class ="form-control" asp-items="ViewBag.OrderId"></select>
                <span asp-validation-for="OrderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Status List</a> &nbsp;\
    <a asp-area="Admins" asp-controller="Orders" asp-action="Index">Back to Orders List </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
